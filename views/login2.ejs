<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Authentication</title>

  <style>
    .customborder {
        border-radius: 2%;
        border: 2px solid rgb(29, 26, 26);
    }
    a:hover {
  color: red;
  background-color: transparent;
  text-decoration: underline;
}
</style>
</head>
<body>
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body customborder">
        <h1 class="text-center mb-3">Login Here</h1>
        <%- include ("./partials/messages"); %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <input type="submit" class="btn btn-block btn-outline-success" value="Login">
        </form>
        <p class="lead mt-4">
          No Account? <a href="/users/register">Register Now</a>
        </p>
      </div>
    </div>
  </div>
</body>
</html>